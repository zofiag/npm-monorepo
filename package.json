{
  "name": "npm-monorepo",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -b tsconfig.build.json",
    "dev": "run-p watch:**",
