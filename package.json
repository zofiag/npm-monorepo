    "typescript": "^4.1.5"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.20.0",
    "hygen": "^6.0.4",
    "npm-run-all": "^4.1.5"
  }
}
